<Page x:Class="LogisticProgress.Pages.Authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LogisticProgress.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="405" d:DesignWidth="800"
      Title="Authorization">
    
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="220">
        <TextBlock Text="Авторизация" FontSize="22" Margin="5,5,5,10" HorizontalAlignment="Center"/>
        <TextBlock Text="Логин"/>
        <TextBox x:Name="tbLogin"/>
        <TextBlock Text="Пароль"/>
        <TextBox Visibility="Collapsed" Name="tbPassword"/>
        <PasswordBox x:Name="pbPassword"/>
        <CheckBox Content="Показать пароль" x:Name="chbShowPassword" Click="chbShowPassword_Click"/>
        <Button Content="Войти" Name="btnEnter" Click="btnEnter_Click" IsDefault="True"/>
    </StackPanel>
</Page>
